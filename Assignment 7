#Create a function with default parameter "file" storing the file path
def append_to_file(file="data.txt"):
    try:
        # Step 2: Open the file in append mode
        with open(file, "a") as f:
           
          # Step 3: Write roll number, name, and class using writelines()
            roll_number = input("Enter your roll number: ")
            name = input("Enter your name: ")
            class_name = input("Enter your class: ")
            f.writelines([roll_number + "\n", name + "\n", class_name + "\n"])

        # Step 4: Read the file using readlines() and print the data
        with open(file, "r") as f:
            print(f.read())

    except FileNotFoundError as e:
        print(f"File '{file}' not found. Error: {str(e)}")

    except Exception as e:
        print("An error occurred:", str(e))

# Call the function
append_to_file()
